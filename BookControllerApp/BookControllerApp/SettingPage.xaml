<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookControllerApp.SettingPage"
             x:Name="SettingContent">

    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="Center"
            Padding="80,0,80,0">
            <ActivityIndicator  
                x:Name="settingIndicator"
                IsRunning="false" />
            <Label Text="現在の設定値" />
            <Label x:Name="leftPosText" Text="" />
            <Label x:Name="rightPosText" Text="" />

            <Button
                x:Name="SettingButton"
                Text="クリックする位置を設定する"
                Clicked="OnSettingButtonClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

